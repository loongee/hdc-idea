<idea-plugin url="https://github.com/pbreault/adb-idea">
    <id>com.developerphil.hdcidea</id>
    <name>HDC Idea</name>
    <vendor url="http://www.developerphil.com">Philippe Breault (HarmonyOS Port)</vendor>
    <extensions defaultExtensionNs="com.intellij">
        <!-- Notification group for logging -->
        <notificationGroup displayType="NONE" id="HDC Idea (Logging)" isLogByDefault="true" />

        <!-- Notification group for errors -->
        <notificationGroup displayType="BALLOON" id="HDC Idea (Errors)" isLogByDefault="true" />
    </extensions>
    <description><![CDATA[
        A plugin to speed up your day to day HarmonyOS development for DevEco Studio.<br />
        Adds the following HDC commands:<br />
        <ul>
            <li>HDC Uninstall App</li>
            <li>HDC Kill App</li>
            <li>HDC Start App</li>
            <li>HDC Restart App</li>
            <li>HDC Clear App Data</li>
            <li>HDC Clear App Data and Restart</li>
            <li>HDC Start App With Debugger</li>
            <li>HDC Restart App With Debugger</li>
            <li>HDC Grant/Revoke Permissions</li>
        </ul>
        <br />
        There are two basic ways to invoke a command:
        <ul>
            <li>Through the Tools->HarmonyOS->HDC Idea menu</li>
            <li>By searching for "HDC" in "Find Actions" (osx: cmd+shift+a, windows/linux: ctrl+shift+a)</li>
        </ul>
        <br />
        <b>Note:</b> This is a port of the ADB Idea plugin for HarmonyOS/OpenHarmony development.
        <br />
        <b>HDC Commands Mapping:</b>
        <ul>
            <li>Kill App: <code>aa force-stop &lt;bundleName&gt;</code></li>
            <li>Start App: <code>aa start -b &lt;bundleName&gt; -a &lt;abilityName&gt;</code></li>
            <li>Clear Data: <code>bm clean -n &lt;bundleName&gt;</code></li>
            <li>Uninstall: <code>hdc uninstall &lt;bundleName&gt;</code></li>
            <li>Grant Permission: <code>bm grant -n &lt;bundleName&gt; -p &lt;permission&gt;</code></li>
            <li>Revoke Permission: <code>bm revoke -n &lt;bundleName&gt; -p &lt;permission&gt;</code></li>
        </ul>
        ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.huawei.ohos</depends>

    <actions>
        <group description="HDC Idea" id="HdcIdea" popup="true" text="_HDC Idea">
            <action class="com.developerphil.adbidea.action.hdc.QuickListAction"
                    description="List all the HDC idea operations in a popup"
                    id="com.developerphil.adbidea.action.hdc.HdcIdeaQuickList"
                    text="HDC Operations Popup...">
                <keyboard-shortcut first-keystroke="shift ctrl A" keymap="Mac OS X" />
                <keyboard-shortcut first-keystroke="shift ctrl A" keymap="Mac OS X 10.5+" />
                <keyboard-shortcut first-keystroke="shift ctrl alt A" keymap="$default" />
            </action>
            <separator />

            <action class="com.developerphil.adbidea.action.hdc.RevokePermissionsAction"
                    description="Revoking the runtime permissions of the current application"
                    id="com.developerphil.adbidea.action.hdc.RevokePermissionsAction"
                    text="HDC Revoke Permissions" />

            <action class="com.developerphil.adbidea.action.hdc.RevokePermissionsAndRestartAction"
                    description="Revoking the runtime permissions of the current application and restarts it"
                    id="com.developerphil.adbidea.action.hdc.RevokePermissionsAndRestartAction"
                    text="HDC Revoke Permissions and Restart" />

            <action class="com.developerphil.adbidea.action.hdc.GrantPermissionsAction"
                    description="Granting the runtime permissions of the current application"
                    id="com.developerphil.adbidea.action.hdc.GrantPermissionsAction"
                    text="HDC Grant Permissions" />

            <action class="com.developerphil.adbidea.action.hdc.UninstallAction"
                    description="Uninstalls the current application"
                    id="com.developerphil.adbidea.action.hdc.UninstallAction"
                    text="HDC Uninstall App" />

            <action class="com.developerphil.adbidea.action.hdc.KillAction"
                    description="Kills the current application"
                    id="com.developerphil.adbidea.action.hdc.KillAction"
                    text="HDC Kill App" />

            <action class="com.developerphil.adbidea.action.hdc.StartAction"
                    description="Starts the current application"
                    id="com.developerphil.adbidea.action.hdc.StartAction"
                    text="HDC Start App" />

            <action class="com.developerphil.adbidea.action.hdc.RestartAction"
                    description="Restarts the current application"
                    id="com.developerphil.adbidea.action.hdc.RestartAction"
                    text="HDC Restart App" />

            <action class="com.developerphil.adbidea.action.hdc.ClearDataAction"
                    description="Clears the private storage of the app"
                    id="com.developerphil.adbidea.action.hdc.ClearDataAction"
                    text="HDC Clear App Data" />

            <action class="com.developerphil.adbidea.action.hdc.ClearDataAndRestartAction"
                    description="Clears the private storage of the app and restarts it"
                    id="com.developerphil.adbidea.action.hdc.ClearDataAndRestartAction"
                    text="HDC Clear App Data and Restart" />

            <add-to-group anchor="last" group-id="ToolsMenu" />
        </group>
    </actions>
</idea-plugin>
